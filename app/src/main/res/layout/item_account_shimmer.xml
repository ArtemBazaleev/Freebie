<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="300dp"
            android:layout_height="@dimen/avatar_small_size"
            android:layout_marginStart="@dimen/default_side_margin"
            android:layout_marginTop="@dimen/default_top_margin_xl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/shimmer_color" />

        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/coupon_width"
            android:layout_height="@dimen/coupon_height"
            android:layout_marginStart="@dimen/default_side_margin"
            android:layout_marginTop="@dimen/default_top_margin"
            android:background="@drawable/round_corners_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:foreground="@color/cyan_primary" />

        <View
            android:id="@+id/view4"
            android:layout_width="@dimen/coupon_width"
            android:layout_height="@dimen/coupon_height"
            android:layout_marginStart="@dimen/default_side_margin"
            android:layout_marginTop="@dimen/default_top_margin"
            android:background="@drawable/round_corners_default"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:foreground="@color/cyan_primary" />

        <View
            android:id="@+id/view7"
            android:layout_width="300dp"
            android:layout_height="@dimen/avatar_small_size"
            android:layout_marginStart="@dimen/default_side_margin"
            android:layout_marginTop="@dimen/default_top_margin_xl"
            android:background="@color/shimmer_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <View
            android:id="@+id/view8"
            android:layout_width="40dp"
            android:layout_height="@dimen/avatar_small_size"
            android:layout_marginStart="@dimen/default_side_margin"
            android:layout_marginTop="@dimen/default_top_margin"
            android:background="@color/shimmer_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view7" />

        <View
            android:id="@+id/view9"
            android:layout_width="300dp"
            android:layout_height="@dimen/avatar_small_size"
            android:layout_marginStart="@dimen/default_side_margin"
            android:background="@color/shimmer_color"
            app:layout_constraintBottom_toBottomOf="@+id/view8"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toTopOf="@+id/view8" />

        <View
            android:id="@+id/view10"
            android:layout_width="40dp"
            android:layout_height="@dimen/avatar_small_size"
            android:background="@color/shimmer_color"
            android:layout_marginStart="@dimen/default_side_margin"
            android:layout_marginTop="@dimen/default_top_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view8" />

        <View
            android:id="@+id/view11"
            android:layout_width="300dp"
            android:layout_height="@dimen/avatar_small_size"
            android:layout_marginStart="@dimen/default_side_margin"
            android:background="@color/shimmer_color"
            app:layout_constraintBottom_toBottomOf="@+id/view10"
            app:layout_constraintStart_toEndOf="@+id/view10"
            app:layout_constraintTop_toTopOf="@+id/view10" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.facebook.shimmer.ShimmerFrameLayout>